<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign3">


    <Button
        android:id="@+id/Instructionbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Instruction"
        android:layout_marginTop="575dp"
        android:layout_marginLeft="10dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="120dp" />

    <Button
        android:id="@+id/Setingsbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_below="@id/Instructionbtn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="120dp" />

    <Button
        android:id="@+id/Aibtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="575dp"
        android:text="AI Chat"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="174dp" />

    <Button
        android:id="@+id/Calendarbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:layout_marginTop="575dp"
        android:layout_marginLeft="280dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/Musicbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Aibtn"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        android:text="Music"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/Trigerbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Calendarbtn"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="20dp"
        android:text="Triggers"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="30dp" />
</RelativeLayout>